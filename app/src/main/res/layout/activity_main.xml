<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- ✅ 배경 사진 -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="397dp"
        android:layout_height="716dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backpicture_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ✅ 버튼 1: 상품검색, 지도 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/show_map_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="상품검색\n지도"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/deep_navy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/payment_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintWidth_percent="0.3"/>

    <!-- ✅ 버튼 2: 결제 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/payment_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="결제"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/deep_navy"
        app:layout_constraintStart_toEndOf="@id/show_map_button"
        app:layout_constraintEnd_toStartOf="@+id/mypage_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintWidth_percent="0.3"/>

    <!-- ✅ 버튼 3: 마이페이지 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/mypage_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/deep_navy"
        app:layout_constraintStart_toEndOf="@id/payment_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontalWeight="1"
        app:layout_constraintWidth_percent="0.3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
